<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>Krisch-Card Bt.</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <section id="wrapper" >
            <header id="header">
                <hgroup>
                    <h2>{% block blog_title %}<a href="#">Krisch - Card Bt.</a>{% endblock %}</h2>
                    <!--<h3>{% block blog_tagline %}<a href="#">minden ami autó</a>{% endblock %}</h3>-->
                </hgroup>
                <div class="banner">
                </div>
                <div class="topper">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('krisch_card_workshop_homepage') }}">Főoldal</a></li>
                                <li><a href="{{ path('krisch_card_workshop_description') }}">Rólunk</a></li>
                                <li><a href="{{ path('krisch_card_workshop_contact') }}">Kapcsolat</a></li>
                                <li><a href="{{ path('krisch_card_workshop_services') }}">Szolgáltatások</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                    Krisch - Card Bt. :: created by <a href="https://github.com/dsyph3r">Krucsó Attila</a>
                {% endblock %}
            </div>
        </section>

        {% block javascripts %}{% endblock %}
    </body>
</html>
